<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_4sdp"
    android:layout_marginLeft="@dimen/_4sdp"
    android:layout_marginRight="@dimen/_4sdp"
    android:background="#fff">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_123sdp"
        android:background="#fff"
        >

        <TextView
            android:id="@+id/row_notification_text_supervisor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="اسم المشرف"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            android:layout_marginStart="@dimen/_6sdp"
            android:textColor="#b3b3b3"
            android:textSize="@dimen/_12sdp"
            android:layout_alignParentRight="true"
            android:maxLines="1"/>


        <TextView
            android:id="@+id/row_notification_text_driver_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="اسم السائق"
            android:textStyle="bold"
            android:layout_marginEnd="@dimen/_6sdp"
            android:layout_marginStart="@dimen/_6sdp"
            android:textColor="#b3b3b3"
            android:textSize="@dimen/_12sdp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/row_notification_text_supervisor_name"
            android:maxLines="1"
            />
        <TextView
            android:id="@+id/row_notification_text_guide_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="اسم المرشد"
            android:textStyle="bold"
            android:layout_marginEnd="@dimen/_6sdp"
            android:layout_marginStart="@dimen/_6sdp"
            android:textColor="#b3b3b3"
            android:textSize="@dimen/_12sdp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/row_notification_text_driver_name"
            android:maxLines="1"
            />
        <TextView
            android:id="@+id/row_notification_text_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="عنوان الرساله"
            android:textStyle="bold"
            android:layout_marginEnd="@dimen/_6sdp"
            android:layout_marginStart="@dimen/_6sdp"
            android:textColor="#b3b3b3"
            android:textSize="@dimen/_12sdp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/row_notification_text_guide_name"
            android:maxLines="1"
            />
        <TextView
            android:id="@+id/row_notification_text_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الرساله"
            android:textStyle="bold"
            android:layout_marginEnd="@dimen/_6sdp"
            android:layout_marginStart="@dimen/_6sdp"
            android:textColor="#b3b3b3"
            android:textSize="@dimen/_12sdp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/row_notification_text_header"
            android:maxLines="1"
            />

    </RelativeLayout>
</RelativeLayout>