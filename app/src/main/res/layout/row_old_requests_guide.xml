<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_4sdp"
    android:layout_marginLeft="@dimen/_4sdp"
    android:layout_marginRight="@dimen/_4sdp"
    android:background="#fff">




    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_50sdp"
        android:background="#fff"
        android:layout_centerVertical="true"
        >

        <TextView
            android:id="@+id/row_old_requests_text_fromTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="المسار"
            android:textStyle="bold"
            android:layout_marginEnd="@dimen/_6sdp"
            android:layout_marginStart="@dimen/_6sdp"
            android:textColor="#b3b3b3"
            android:textSize="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/row_old_requests_text_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تم قبول الرحله"
            android:textStyle="bold"
            android:layout_marginEnd="@dimen/_6sdp"
            android:layout_marginStart="@dimen/_6sdp"
            android:textColor="#b3b3b3"
            android:textSize="@dimen/_12sdp"
            android:layout_below="@+id/row_old_requests_text_fromTo"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
        <ImageView
            android:id="@+id/row_old_requests_icon_alarm_yes"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/group_accept"
            android:textColor="#b3b3b3"
            android:layout_marginLeft="@dimen/_7sdp"
            android:layout_centerVertical="true"
            android:visibility="gone"
            />
    <ImageView
        android:id="@+id/row_old_requests_icon_alarm_no"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/no"
        android:textColor="#b3b3b3"
        android:layout_marginLeft="@dimen/_7sdp"
        android:layout_centerVertical="true"
        android:visibility="gone"
        />





</RelativeLayout>