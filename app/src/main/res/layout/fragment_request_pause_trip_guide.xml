<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f2f2f2"
    tools:context=".fragment.RequestPauseTripGuideFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <android.support.v7.widget.Toolbar
            android:id="@+id/request_pause_trip_guide_tool_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_42sdp"
            android:background="#154677">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!-- <ImageView
                     android:id="@+id/home_image_favrite_heart"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignParentLeft="true"
                     android:background="@drawable/favorite_heart_button"
                     />-->


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:layout_centerHorizontal="true"
                    android:text="@string/PauseTrip"
                    android:textColor="#fff"
                    android:textSize="@dimen/_14sdp" />
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>

        <android.support.v7.widget.CardView
            android:id="@+id/request_pause_guide_card_details"
            android:layout_width="@dimen/_280sdp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_19sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            app:cardBackgroundColor="#fff"
            app:cardCornerRadius="@dimen/_18sdp"
            app:cardElevation="@dimen/_5sdp"
            android:layout_below="@+id/request_pause_trip_guide_tool_bar">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_9sdp"

                >

                <TextView
                    android:id="@+id/request_pause_trip_guide_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:text="اسم الرحله"
                    android:textColor="#c8c8c8"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/request_pause_guide_guide_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/request_pause_trip_guide_name"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:text="اسم المشرف"
                    android:textColor="#c8c8c8"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/request_pause_guide_bus_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/request_pause_guide_guide_name"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:text="رقم الحافلة"
                    android:textColor="#c8c8c8"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/request_pause_guide_driver_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/request_pause_guide_bus_number"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:text="اسم السائق"
                    android:textColor="#c8c8c8"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/request_pause_guide_going_down_Place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/request_pause_guide_driver_name"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:text="مكان النزول"
                    android:textColor="#c8c8c8"
                    android:textSize="@dimen/_10sdp"/>

                <TextView
                    android:id="@+id/request_pause_guide_delivery_Place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/request_pause_guide_going_down_Place"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:text="مكان الاستلام"
                    android:textColor="#c8c8c8"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/request_pause_guide_start_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/request_pause_guide_delivery_Place"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:text="تاريخ بدايه"
                    android:textColor="#c8c8c8"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/request_pause_guide_end_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/request_pause_guide_start_date"
                    android:layout_marginBottom="@dimen/_7sdp"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:text="تاريخ نهايه"
                    android:textColor="#c8c8c8"
                    android:textSize="@dimen/_10sdp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <TextView
            android:id="@+id/request_pause_guide_pause_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/request_pause_guide_card_details"
            android:layout_marginBottom="@dimen/_7sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:text="سبب التعليق"
            android:textStyle="bold"
            android:textColor="#c8c8c8"
            android:textSize="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_15sdp"/>

        <android.support.v7.widget.CardView
            android:id="@+id/request_pause_guide_card_pause_reason"
            android:layout_width="@dimen/_290sdp"
            android:layout_height="@dimen/_37sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginStart="@dimen/_14sdp"
            android:layout_marginEnd="@dimen/_14sdp"
            app:cardCornerRadius="@dimen/_7sdp"
            app:cardBackgroundColor="#fff"
            app:cardElevation="@dimen/_5sdp"
            android:layout_below="@+id/request_pause_guide_pause_reason">



            <EditText
                android:id="@+id/request_pause_guide_text_pause_reason"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_37sdp"
                android:textColorHint="#bababa"
                android:textColor="#c8c8c8"
                android:paddingStart="@dimen/_22sdp"
                android:paddingEnd="@dimen/_22sdp"
                android:textSize="@dimen/_13sdp"
                android:backgroundTint="#fff"
                android:maxLines="1"/>



        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/request_pause_guide_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/request_pause_guide_card_pause_reason"
            android:layout_marginBottom="@dimen/_7sdp"
            android:layout_marginTop="@dimen/_9sdp"
            android:text="الرساله"
            android:textStyle="bold"
            android:textColor="#c8c8c8"
            android:textSize="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_15sdp"
            />

        <android.support.v7.widget.CardView
            android:id="@+id/request_pause_guide_card_msg"
            android:layout_width="@dimen/_290sdp"
            android:layout_height="@dimen/_37sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginStart="@dimen/_14sdp"
            android:layout_marginEnd="@dimen/_14sdp"
            app:cardCornerRadius="@dimen/_7sdp"
            app:cardBackgroundColor="#fff"
            app:cardElevation="@dimen/_5sdp"
            android:layout_below="@+id/request_pause_guide_msg">



            <EditText
                android:id="@+id/request_pause_guide_text_msg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_37sdp"
                android:textColorHint="#bababa"
                android:textColor="#c8c8c8"
                android:paddingStart="@dimen/_22sdp"
                android:paddingEnd="@dimen/_22sdp"
                android:textSize="@dimen/_13sdp"
                android:backgroundTint="#fff"
                android:maxLines="1"/>



        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/request_pause_trip_guide_btn_send"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_32sdp"
            android:background="@drawable/btn_register"
            android:layout_marginTop="@dimen/_13sdp"
            android:layout_marginBottom="@dimen/_17sdp"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/_13sdp"
            android:textColor="#fff"
            android:layout_below="@id/request_pause_guide_card_msg"
            android:text="@string/Send"
            android:textAllCaps="false"
            android:clickable="true"
            />
    </RelativeLayout>

</ScrollView>