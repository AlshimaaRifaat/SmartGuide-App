<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f2f2f2"
    tools:context=".fragment.DetailsMemberTripsFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <android.support.v7.widget.Toolbar
            android:id="@+id/details_member_trips_tool_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_42sdp"
            android:background="#154677">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_90sdp"
                    android:layout_centerHorizontal="true"
                    android:text="@string/nextTrip"
                    android:textColor="#fff"
                    android:textSize="@dimen/_14sdp" />
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>

        <android.support.v7.widget.CardView
            android:id="@+id/details_member_trips_card_details"
            android:layout_width="@dimen/_280sdp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_60sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            app:cardBackgroundColor="#fff"
            app:cardCornerRadius="@dimen/_18sdp"
            app:cardElevation="@dimen/_5sdp"
            android:layout_below="@+id/details_member_trips_tool_bar">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_9sdp"

                >

                <TextView
                    android:id="@+id/details_member_trips_trip_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:text="اسم الرحله"
                    android:textColor="#c8c8c8"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/details_member_trips_guide_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/details_member_trips_trip_name"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:text="اسم المرشد"
                    android:textColor="#c8c8c8"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/details_member_trips_bus_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/details_member_trips_guide_name"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:text="رقم الحافلة"
                    android:textColor="#c8c8c8"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/details_member_trips_driver_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/details_member_trips_bus_number"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:text="اسم السائق"
                    android:textColor="#c8c8c8"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/details_member_trips_going_down_Place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/details_member_trips_driver_name"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:text="مكان النزول"
                    android:textColor="#c8c8c8"
                    android:textSize="@dimen/_10sdp"/>

                <TextView
                    android:id="@+id/details_member_trips_delivery_Place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/details_member_trips_going_down_Place"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:text="مكان الاستلام"
                    android:textColor="#c8c8c8"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/details_member_trips_start_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/details_member_trips_delivery_Place"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:text="تاريخ بدايه"
                    android:textColor="#c8c8c8"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/details_member_trips_end_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/details_member_trips_start_date"
                    android:layout_marginBottom="@dimen/_7sdp"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:text="تاريخ نهايه"
                    android:textColor="#c8c8c8"
                    android:textSize="@dimen/_10sdp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/details_member_trips_card_details"
            >
            <Button
                android:id="@+id/details_member_trips_btn_delivered"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_32sdp"
                android:background="@drawable/btn_register"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/_13sdp"
                android:textColor="#fff"
                android:text="@string/delivering_done"
                android:textAllCaps="false"
                android:layout_marginBottom="@dimen/_11sdp"
                android:clickable="true"
                />

            <Button
                android:id="@+id/details_member_trips_btn_view_on_map"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_32sdp"
                android:background="@drawable/btn_register"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_13sdp"
                android:textColor="#fff"
                android:text="عرض على الخريطه"
                android:textAllCaps="false"
                android:layout_marginBottom="@dimen/_11sdp"
                android:layout_below="@+id/details_member_trips_btn_delivered"
                android:clickable="true"
                />


        </RelativeLayout>
    </RelativeLayout>
</ScrollView>